<h4 class="page-header">Register</h4>

<%= form_for @business do |f| %>
	<%= f.label :name %>
	<%= f.text_field :name %>
	<br/>
	<%= f.label :phone_number %>
	<%= f.text_field :phone_number %>
	<br/>
	<%= f.label :address %>
	<%= f.text_field :address %>
	<br/>
	<%= f.label :image %>
	<%= f.file_field :image %>
	<br/>
	<%= f.label :email %>
	<%= f.email_field :email %>
	<br/>
	<%= f.label :password %>
	<%= f.password_field :password %>
	<br/>
	<%= f.submit "Create Account!", class: 'btn btn-primary' %>
<% end %>